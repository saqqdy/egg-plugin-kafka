{
	"name": "egg-plugin-kafka",
	"description": "An egg plugin that provides a number of built-in methods",
	"version": "1.0.0",
	"packageManager": "pnpm@8.6.5",
	"eggPlugin": {
		"name": "kafka"
	},
	"files": [
		"app",
		"libs",
		"config",
		"agent.js",
		"app.js",
		"!*.bak",
		"!*_bak"
	],
	"scripts": {
		"test": "pnpm run lint -- --fix && egg-bin pkgfiles && pnpm run test-local",
		"test-local": "egg-bin test",
		"cov": "egg-bin cov",
		"lint": "eslint .",
		"ci": "egg-bin pkgfiles --check && pnpm run lint && pnpm run cov",
		"pkgfiles": "egg-bin pkgfiles",
		"pub": "tscjs scripts/publish",
		"unpub": "tscjs scripts/unpublish",
		"sync": "tscjs scripts/sync",
		"workflow:publish-test": "zx scripts/workflow.mjs",
		"dist": "run-s eslint prettier pub",
		"autod": "autod",
		"eslint": "eslint --fix --ext .ts,.js ./",
		"prettier": "prettier --write \"**/*.{js,ts,json,md}\""
	},
	"dependencies": {
		"eventsproxy": "^1.3.4",
		"js-cool": "^5.23.1",
		"kafka-node": "^5.0.0"
	},
	"devDependencies": {
		"@eslint-sets/eslint-config-basic": "^5.14.0",
		"autod": "^3.1.2",
		"autod-egg": "^1.1.0",
		"egg": "^3.30.1",
		"egg-bin": "^6.13.0",
		"egg-ci": "^2.2.0",
		"eslint": "^9.25.0",
		"eslint-config-egg": "^14.1.0",
		"load-yml": "^1.4.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.5.3",
		"prettier-config-common": "^1.4.0",
		"reinstaller": "^3.0.2",
		"tsnd": "^1.1.0",
		"zx": "^8.4.1"
	},
	"peerDependencies": {
		"egg": ">= 2",
		"egg-bin": ">= 4"
	},
	"engines": {
		"node": ">=12.20"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/core",
				"webpack",
				"typescript",
				"mocha"
			],
			"allowedVersions": {
				"eslint": ">= 8.0.0"
			}
		}
	},
	"keywords": [
		"eggjs",
		"eggPlugin",
		"egg-plugin-kafka",
		"egg-plugin",
		"kafka",
		"egg-kafka",
		"egg",
		"kafka-node",
		"kafka-plugin",
		"kafka-node-plugin",
		"egg-kafka-node"
	],
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	},
	"ci": {
		"version": "12, 14, 16, 18"
	},
	"license": "MIT",
	"author": "saqqdy <https://github.com/saqqdy>",
	"homepage": "https://github.com/saqqdy/egg-plugin-kafka#readme",
	"bugs": {
		"url": "https://github.com/saqqdy/egg-plugin-kafka/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saqqdy/egg-plugin-kafka.git"
	}
}